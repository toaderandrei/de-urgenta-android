<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="description"
            type="String" />

        <variable
            name="imageRes"
            type="int" />

        <variable
            name="arrowRes"
            type="int" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_configure_item"
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:layout_marginTop="20dp"
            app:imageRes="@{imageRes}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_map_layer" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_configure_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center"
            tools:text="@string/configure_account"

            android:contentDescription="@string/item_description_configure_account"

            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
            android:textSize="@dimen/text_size_big"
            android:text="@{description}"
            app:layout_constraintBottom_toBottomOf="@+id/iv_configure_item"
            app:layout_constraintStart_toEndOf="@+id/iv_configure_item"

            app:layout_constraintTop_toTopOf="@+id/iv_configure_item" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_configure_arrow_group"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:imageRes="@{arrowRes}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/iv_configure_item"
            app:layout_constraintTop_toTopOf="@+id/iv_configure_item"

            app:srcCompat="@drawable/ic_arrow_forward" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>