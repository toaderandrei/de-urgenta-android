<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="setMeetingCallback"
            type="ro.code4.deurgenta.interfaces.ViewCallback" />

        <variable
            name="addNewAddressCallback"
            type="ro.code4.deurgenta.interfaces.ViewCallback" />

        <variable
            name="visibleText"
            type="Boolean" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/big_margin"
        android:layout_marginEnd="@dimen/big_margin"
        android:fitsSystemWindows="true"
        tools:context=".ui.onboarding.OnboardingActivity"
        tools:ignore="MergeRootFrame">

        <include
            android:id="@+id/save_address_appbar"
            layout="@layout/layout_address_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:visibleText="@{visibleText}" />

        <include
            android:id="@+id/save_address_content_layout"
            layout="@layout/layout_save_address_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/big_margin"
            app:addNewAddressCallback="@{addNewAddressCallback}"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:setMeetingCallback="@{setMeetingCallback}" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
